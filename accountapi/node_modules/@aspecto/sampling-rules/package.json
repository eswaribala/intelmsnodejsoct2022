{
    "name": "@aspecto/sampling-rules",
    "version": "0.0.7",
    "description": "Aspecto Sampling Rules Engine",
    "main": "./dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aspecto-io/sampling-rules.git"
    },
    "author": "Aspecto LTD",
    "license": "ISC",
    "homepage": "https://github.com/aspecto-io/sampling-rules",
    "scripts": {
        "build": "tsc",
        "prebuild": "rm -rf ./dist",
        "test": "jest",
        "watch": "tsc -w",
        "prepublishOnly": "yarn build",
        "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\""
    },
    "dependencies": {},
    "devDependencies": {
        "@aspecto/prettier-config": "^0.0.1",
        "@types/node": "^14.14.20",
        "eslint": "^7.17.0",
        "husky": "^4.3.6",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.spec.+(ts|tsx|js)"
        ],
        "testEnvironment": "node"
    },
    "prettier": "@aspecto/prettier-config"
}
